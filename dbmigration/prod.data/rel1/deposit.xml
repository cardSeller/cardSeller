<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <preConditions>
        <dbms type="postgresql"/>
    </preConditions>
    <changeSet id="create.sequence" author="minj">
        <createSequence sequenceName="seq_deposit" startValue="1000000000000000"/>
    </changeSet>
    <!--订单表-->
    <changeSet id="create.table" author="minj">
        <createTable tableName="deposit">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="member_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="total" type="number(12,3)">
                <constraints nullable="false"/>
            </column>
            <column name="deposit_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="deposit_status" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="prod.data" author="minj">
        <insert tableName="deposit">
            <column name="id" value="1"/>
            <column name="member_id" value="1"/>
            <column name="total" value="1000"/>
            <column name="deposit_date" value="2014-11-10 15:06:16"/>
            <column name="deposit_status" value="DS"/>
        </insert>
    </changeSet>
</databaseChangeLog>